<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditTaskFragment">

    <CheckBox
        android:id="@+id/isActiveEdit_CheckBox_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="9dp"
        android:contentDescription="@string/todo"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/todoDescriptionEdit_EditText_ID"
        app:layout_constraintEnd_toStartOf="@+id/todoDescriptionEdit_EditText_ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todoTitleEdit_EditText_ID" />

    <EditText
        android:id="@+id/todoTitleEdit_EditText_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        android:hint="@string/title"
        android:inputType="none"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/todoDescriptionEdit_EditText_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        android:hint="@string/enter_your_task_here"
        android:inputType="none"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todoTitleEdit_EditText_ID" />

</androidx.constraintlayout.widget.ConstraintLayout>